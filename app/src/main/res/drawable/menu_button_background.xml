<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape>
            <solid android:color="#E1BEE7" /> <!-- Màu chính của gradient khi ở RGB mode -->
            <corners android:radius="16dp" />
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="#FAFAFA" /> <!-- Màu trắng ngà khi không ở RGB mode -->
            <corners android:radius="16dp" />
        </shape>
    </item>
</selector>